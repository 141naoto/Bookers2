<div class="row">
<div class="createbook" style="margin-bottom: 20px;">
<h2>New book</h2>
<%= form_for(book) do |f| %>

<% if book.errors.any? %>
  <div id="error_explanation">
    <h3><%= book.errors.count %>件のエラーが発生しました。</h3>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<p>Title</p>
<%= f.text_field :Title, class:'book_title col-xs-12' %>

<p>Opinion</p>
<%= f.text_area :Opinion, class:'book_body col-xs-12' %>

<div class:"action-row">
<%= f.submit 'Create Book', class:"btn btn-primary col-xs-12 book_#{book.id}", :style=>:"margin: 10px auto;" %>
</div>
<% end %>
</div>
</div>
