<div class="body" style="margin-left: 100px;">
 <h2>User info</h2>
 <%= form_for(@user) do |f| %>

 <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
   </div>
 <% end %>

<div class="field">
<label>Name</label>
<%= f.text_field :username, class:"name", placeholder:"名前" %>
</div>

<div class="field">
<label>Image</label>
<%= f.attachment_field :profile_image, placeholder: "image", class:"user_image" %>
</div>

<div class="field">
<label>Inroduction</label>
<%= f.text_area :Introduction, class:"introduction" %>
</div>

<div class="action">
<%= f.submit "Update User", class:"user_#{@user.id}" %>
</div>
<% end %>
</div>