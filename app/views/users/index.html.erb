<div class="body">
<div class="container">
	<div class="row">
		<div class="col-lg-3">
<%= render 'users/userinfo', user: current_user %>
<%= render 'books/new', book: @book %>
</div>
<div class="col-lg-9">
<h1>Users</h1>
<table class="table table-hover table-inverse">
	<thead>
	<tr>
		<th>image</th>
		<th>name</th>
		<th colspan="1"></th>
	</tr>
</thead>

<% @users.each do |user| %>
<tbody>
	<tr>
		<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format:"jpg", fallback:"no_image.jpg", size:'50x50' %>
		</td>

		<td><%= user.username %>
		</td>

		<td><%= link_to "Show", user_path(user),class:"user_show_#{user.id} link" %>
		</td>
	</tr>
</tbody>
<% end %>
</table>
</div>
</div>
</div>
</div>